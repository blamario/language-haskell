                       language-haskell
  hs-source-dirs:      app/
  default-language:    Haskell2010

test-suite             positive
  type:                exitcode-stdio-1.0
  build-depends:       base >= 4.7 && < 5, text < 1.3, grammatical-parsers,
                       either == 5.*, directory < 2, filepath < 1.5,
                       monoid-subclasses >= 0.4.1 && <= 1.1, deep-transformations < 0.2,
